  },
  subHeaderText: {
    fontSize: 16,
    color: '#fff',
  },
  weatherInfo: {
    alignItems: 'center',
    marginTop: 20,
  },
  weatherIcon: {
    width: 120,
    height: 120,
  },
  temperature: {
    fontSize: 48,
    fontWeight: 'bold',
    color: '#fff',
    marginTop: 10,
  },
  condition: {
    fontSize: 24,
    color: '#fff',
    marginTop: 10,
  },
  highLow: {
    fontSize: 18,
