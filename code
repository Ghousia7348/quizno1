  const weatherData = {
    city: 'Islamabad',
    temperature: '22°C',
    condition: 'Sunny',
    highLow: 'H: 24°C L: 18°C',
    icon: 'https://cdn.iconscout.com/icon/free/png-256/free-sunny-weather-1-458124.png', // Sunny icon
  };

  return (
    <SafeAreaView style={styles.container}>
      {/* Weather Header */}
      <View style={styles.header}>
        <Text style={styles.headerText}>{weatherData.city}</Text>
        <Text style={styles.subHeaderText}>Current Weather</Text>
      </View>

      {/* Weather Icon and Temperature */}
      <View style={styles.weatherInfo}>
        <Image
          source={{ uri: weatherData.icon }}
          style={styles.weatherIcon}
        />
        <Text style={styles.temperature}>{weatherData.temperature}</Text>
        <Text style={styles.condition}>{weatherData.condition}</Text>
        <Text style={styles.highLow}>{weatherData.highLow}</Text>
      </View>

      {/* Additional Weather Details */}
      <View style={styles.detailsContainer}>
        <View style={styles.detailItem}>
          <Text style={styles.detailLabel}>Humidity</Text>
          <Text style={styles.detailValue}>45%</Text>
        </View>
        <View style={styles.detailItem}>
          <Text style={styles.detailLabel}>Wind</Text>
          <Text style={styles.detailValue}>10 km/h</Text>
        </View>
        <View style={styles.detailItem}>
          <Text style={styles.detailLabel}>Visibility</Text>
          <Text style={styles.detailValue}>10 km</Text>
        </View>
      </View>
    </SafeAreaView>
  );
}

